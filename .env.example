# App runtime
HOST=0.0.0.0
PORT=5000
FLASK_DEBUG=0
FLASK_SECRET_KEY=change-me

# Ops persistence
OPS_DB_PATH=data/inids_ops.db

# Optional API-key RBAC (leave unset to disable auth)
INIDS_ADMIN_API_KEY=
INIDS_ANALYST_API_KEY=
INIDS_VIEWER_API_KEY=

# API rate limiting
RATE_LIMIT_REQUESTS=120
RATE_LIMIT_WINDOW_SECONDS=60

# Firewall adapter: mock | ufw | nftables
FIREWALL_ADAPTER=mock
